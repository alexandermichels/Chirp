<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/timeline_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA00EE"
        android:layout_weight=".9"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_weight=".1"
        style="?android:attr/buttonBarButtonStyle" >

            <Button
                android:id="@+id/timeline_edit_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:text="@string/watching" />

            <Button
                android:id="@+id/timeline_create_chirp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".34"
                android:text="@string/create_chirp" />

            <Button
                android:id="@+id/timeline_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:text="@string/logout" />

    </LinearLayout>

</LinearLayout>
